pipeline {
    agent none
    stages {
        stage('Run Tests') {
            parallel {
                stage('Test On Windows') {
                    agent {
                        docker { image 'maven:3-alpine' }
                    }
                    steps {
                        echo "First"
                    }
                }
                stage('Test On Linux') {
                    agent {
                       docker { image 'node:7-alpine' }
                    }
                    steps {
                        echo "Second"
                    }
                }
            }
        }
    }
}
